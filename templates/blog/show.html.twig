{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.Title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ blog.summary }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{{ blog.createdate ? blog.createdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Editdate</th>
                <td>{{ blog.editdate ? blog.editdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Madeby</th>
                <td>{{ blog.madeby }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
